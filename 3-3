/*Задан массив, не содержащий нулевых значений. Найти в нём самую длинную знакопеременную подпоследовательность*/
#include <stdio.h>

int main() {
	int numbers[] = {1, 2, 2, 1, 1, -1, -2, 2, -2, 2, -1, 2, -1, 2, 1, -2, 1, 1, -2, 2, 2, -1, 1, -2, 1, -2, 2};
	int n = sizeof(numbers) / sizeof(numbers[0]);
	int MaxLength = 1;
	int CurrentLength = 1;
	for (int i = 1; i < n; i++) {
		if ((numbers[i] > 0 && numbers[i - 1] < 0) || (numbers[i] < 0 && numbers[i - 1] > 0)) {
			CurrentLength++;
			if (CurrentLength > MaxLength) {
				MaxLength = CurrentLength;
			}
		}
		else {
			CurrentLength = 1;
		}
	}
	printf("%d\n", MaxLength);

	return 0;
}
